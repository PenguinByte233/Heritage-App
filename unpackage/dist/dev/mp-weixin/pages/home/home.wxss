
.container {
  padding: 0 0 20px 0;
}
.tab-pane {
  min-height: 300px;
}
.history-image {
  width: 100%;
  height: 200px;
  border-radius: 8px;
}
.history-text-container {
  padding: 15px;
}
.history-title {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 10px;
  display: block;
}
.history-description {
  font-size: 14px;
  line-height: 1.6;
  color: #333;
}
.inheritor-title, .section-title {
  font-size: 16px;
  font-weight: bold;
  margin: 15px 0;
  display: block;
}
.inheritor-card {
  display: flex;
  background-color: #fff;
  border-radius: 8px;
  padding: 15px;
  margin-bottom: 15px;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
}
.inheritor-avatar {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  margin-right: 15px;
}
.inheritor-info {
  flex: 1;
}
.inheritor-name {
  font-size: 16px;
  font-weight: bold;
  display: block;
  margin-bottom: 5px;
}
.inheritor-level {
  font-size: 12px;
  color: #d4237a;
  background-color: rgba(212, 35, 122, 0.1);
  padding: 2px 6px;
  border-radius: 10px;
  display: inline-block;
  margin-bottom: 5px;
}
.inheritor-desc {
  font-size: 14px;
  color: #333;
  line-height: 1.4;
}
.tutorial-list, .inheritor-list, .history-review {
  padding: 0 15px;
}
.image-grid {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -5px;
}
.history-grid-image {
  width: calc(33.33% - 10px);
  height: 100px;
  margin: 5px;
  border-radius: 4px;
}
